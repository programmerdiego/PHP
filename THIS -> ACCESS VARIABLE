/* 1: Main Method
-------------------------------------------------------------- */
<html>
<?php
class color{        //class definition
var $c = "This is my variable";
function brightness() {
	echo $this->c;     //$this represents $obj
	}
}
$obj= new color();    //create an object
$obj->brightness();
?>    
</html>


/* 2: Sample run
-------------------------------------------------------------- */ 

This is my variable
