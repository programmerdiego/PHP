/* 1: Main Method
-------------------------------------------------------------- */
<html>
<body>
<?php 
$browser = $_SERVER["HTTP_USER_AGENT"]; 
$address = $_SERVER["REMOTE_ADDR"];
echo "$browser";   
echo "<br>";
echo "$address";
?>     
</body>
</html>


