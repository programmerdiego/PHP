<?php
class mall{
var $coupon;
	function shop( ) {
	echo "The shooping is good";
	}
}
class store extends mall{
	}
	$x = new store( );
	$x->coupon = "big";
	echo "The mall is ".$x->coupon."<br>";
	$x->shop( );
?>
