<html>
<form action="welcome" method="post">
<input type="text" name="characters" >
</form>
<?php
$clean = array( );         // defines an array 
if ( ctype_alpha ( $_POST["characters"])) //only allows a to z characters
$clean ["characters"] = $_POST["characters"];  // stores characters only
echo $clean ["characters"];  //prints displays 
?>
</html>

