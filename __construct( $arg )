<?php
class food{
var $x1;
var $x2;
function __construct( $arg,$arg2 ) {  
$this->x1= $arg;
$this->x2= $arg2; 
echo $this->x1;
echo ("<br>");
echo $this->x2;
}  
}
$obj= new food( red,apple );
?>
